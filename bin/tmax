#!/bin/bash

cd ~/Code/$1

tmux new-session -d -s $1

tmux rename-window -t $1:0 -n 'Server'
tmux new-window -t $1:1 -n 'Work'
tmux new-window -t $1:2 -n 'Tests'
tmux new-window -t $1:3 -n 'Console'
tmux new-window -t $1:4 -n 'Git'

tmux send-keys -t $1:0  "rails s ; clear" C-m
tmux send-keys -t $1:1  "vim -c :NERDTree TODO"  C-m
tmux send-keys -t $1:2  "guard; clear"  C-m
tmux send-keys -t $1:3  "rails c; clear" C-m
tmux send-keys -t $1:4  "" C-m

tmux select-window -t $1:1
cd ~
tmux -2 attach-session -t $1
